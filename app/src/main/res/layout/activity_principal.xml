<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal2">

    <TextView
        android:id="@+id/LblMensaje"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
    <!-- Button Login -->
    <Button
        android:id="@+id/Button01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/Login"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/Button03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />
    <!-- Button  Ver -->
    <Button
        android:id="@+id/Button03"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/encuesta"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/Button04"
        app:layout_constraintLeft_toLeftOf="@+id/Button01"
        app:layout_constraintRight_toRightOf="@+id/Button01"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />
    <!-- Button Salir -->
    <Button
        android:id="@+id/Button04"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Salir"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/ButtonSync"
        app:layout_constraintLeft_toLeftOf="@+id/Button03"
        app:layout_constraintRight_toRightOf="@+id/Button03"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />
    <!-- Button Mandar Encuestas pendientes -->
    <Button
        android:id="@+id/ButtonSync"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sync"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ButtonEncuestasPendientes"
        app:layout_constraintLeft_toLeftOf="@+id/Button04"
        app:layout_constraintRight_toRightOf="@+id/Button04"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <!-- Button Mandar Encuestas pendientes -->
    <Button
        android:id="@+id/ButtonEncuestasPendientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/encuestaspendientes"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/uploadButton"
        app:layout_constraintLeft_toLeftOf="@+id/ButtonSync"
        app:layout_constraintRight_toRightOf="@+id/ButtonSync"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/uploadfile"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnuploadPhoto"
        app:layout_constraintLeft_toLeftOf="@+id/ButtonEncuestasPendientes"
        app:layout_constraintRight_toRightOf="@+id/ButtonEncuestasPendientes"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/btnuploadPhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fotosPendientes"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/messageText"
        app:layout_constraintLeft_toLeftOf="@+id/uploadButton"
        app:layout_constraintRight_toRightOf="@+id/uploadButton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="4"
        tools:layout_constraintRight_creator="4" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="73dp"
        android:text=""
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btnuploadPhoto"
        app:layout_constraintRight_toRightOf="@+id/btnuploadPhoto"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>